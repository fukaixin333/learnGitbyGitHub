<?xml version="1.0" encoding="UTF-8"?>
<project default="help" basedir=".">
	<property environment="env" />

	<available file="${basedir}/apache-cxf-3.0.13/lib/cxf-core-3.0.13.jar" property="cxf-home" value="${basedir}/apache-cxf-3.0.13" />
	<condition property="cxf-home" value="${env.CXF_HOME}">
		<and>
			<not>
				<isset property="cxf-home" />
			</not>
			<available file="${env.CXF_HOME}/lib" />
		</and>
	</condition>

	<path id="classpath">
		<fileset dir="${cxf-home}/lib" includes="*.jar" />
	</path>

	<target name="WSDLToJava">
		<java classname="org.apache.cxf.tools.wsdlto.WSDLToJava" fork="true">
			<arg value="-client" />
			<arg value="-d" />
			<arg value="${basedir}/java/src" />
			<arg value="http://10.2.252.191:8080/ckwWebService/SyyhConvertData?wsdl" />
			<classpath>
				<path refid="classpath" />
			</classpath>
		</java>
	</target>

	<target name="help">
		<echo message="----------    ----------------------------------------------------------------------------------" />
		<echo message="Target        说明" />
		<echo message="----------    ----------------------------------------------------------------------------------" />
		<echo message="WSDLToJava    获取用于实现service的WSDL文件，并生成完整的Java代码。" />
		<echo message="----------    ----------------------------------------------------------------------------------" />
	</target>
</project>
