<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="metaDs" class="${citic.datasource.meta.bean-class:com.alibaba.druid.pool.DruidDataSource}" init-method="init" destroy-method="close">
		<property name="driverClassName" value="${citic.datasource.meta.driver-class-name}" />
		<property name="url" value="${citic.datasource.meta.url}" />
		<property name="username" value="${citic.datasource.meta.username}" />
		<property name="password" value="${citic.datasource.meta.password}" />

		<property name="maxActive" value="${citic.datasource.meta.max-active:10}" />
		<property name="initialSize" value="${citic.datasource.meta.initial-size:1}" />
		<property name="maxWait" value="${citic.datasource.meta.max-wait:60000}" />
		<property name="minIdle" value="${citic.datasource.meta.min-idle:1}" />

		<property name="timeBetweenEvictionRunsMillis" value="${citic.datasource.meta.time-between-eviction-runs-millis:60000}" />
		<property name="minEvictableIdleTimeMillis" value="${citic.datasource.meta.min-evictable-idle-time-millis:300000}" />

		<property name="testWhileIdle" value="${citic.datasource.meta.test-while-idle:false}" />
		<property name="testOnBorrow" value="${citic.datasource.meta.test-on-borrow:false}" />
		<property name="testOnReturn" value="${citic.datasource.meta.test-on-return:false}" />
		<property name="validationQuery" value="${citic.datasource.meta.validation-query:select 1 from mp01_dual}" />
		
		<property name="removeAbandoned" value="${citic.datasource.meta.remove-abandoned:false}" />
		<property name="removeAbandonedTimeout" value="${citic.datasource.meta.remove-abandoned-timeout:1800}" />
		<property name="logAbandoned" value="${citic.datasource.meta.log-abandoned:true}" />

		<property name="poolPreparedStatements" value="${citic.datasource.meta.pool-prepared-statements:true}" />
		<property name="maxOpenPreparedStatements" value="${citic.datasource.meta.max-open-prepared-statements:20}" />

		<property name="useGlobalDataSourceStat" value="${citic.datasource.meta.use-global-datasource-stat:true}" />
		<property name="filters" value="slf4j" />
		<property name="proxyFilters">
			<list>
				<ref bean="stat-filter" />
			</list>
		</property>
	</bean>

	<bean id="metaTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="metaDs" />
	</bean>

	<!-- 基本jdbc执行器 -->
	<bean id="metaJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="metaDs" />
		<qualifier value="meta" />
	</bean>

	<bean id="metaVendorProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<props>
				<prop key="DB2">db2</prop>
				<prop key="Oracle">oracle</prop>
			</props>
		</property>
	</bean>

	<bean id="metaDatabaseIdProvider" class="org.apache.ibatis.mapping.VendorDatabaseIdProvider">
		<property name="properties" ref="metaVendorProperties"></property>
	</bean>

	<bean id="metaSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="metaDs" />
		<property name="typeAliasesPackage" value="com.citic.server.domain" />
		<property name="databaseIdProvider" ref="metaDatabaseIdProvider" />
		<property name="configLocation" value="classpath:spring/mybatis-meta-config.xml" />
	</bean>

	<bean id="metSqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="metaSqlSessionFactory" />
	</bean>

	<!-- scan for mappers and let them be autowired -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="sqlSessionTemplateBeanName" value="metSqlSession" />
		<property name="basePackage" value="com.citic.server.mapper" />
	</bean>
</beans>